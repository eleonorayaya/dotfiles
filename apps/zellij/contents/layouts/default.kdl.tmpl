layout name="dev" {
  cwd "."

  tab name="zsh" {
    pane split_direction="vertical" {
      pane 
      pane 
    }
  }

  tab name="vim" {
    pane {
      command "nvim"
      close_on_exit true
      start_suspended true
    }
  }

  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="zjstatus" {
        format_left  "#[fg={{.HexTextOnSurface}},bold] {session}#[] {tabs}"
        format_right "{command_git_branch}"
        format_space "#[]"

        mode_normal          "#[] "

        tab_normal               "#[fg={{.HexTextOnSurfaceMuted}}] {name} {fullscreen_indicator}{sync_indicator}{floating_indicator}"
        tab_active               "#[fg={{.HexAccentLavender}},bold,italic] {name} {fullscreen_indicator}{sync_indicator}{floating_indicator}"
        tab_fullscreen_indicator "□ "
        tab_sync_indicator       "  "
        tab_floating_indicator   "󰉈 "

        command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
        command_git_branch_format      "#[fg={{.HexAccentSalmon}}] {stdout} "
        command_git_branch_interval    "10"
        command_git_branch_rendermode  "static"

        datetime          "#[fg={{.HexTextOnSurfaceMuted}}] {format} "
        datetime_format   "%A, %d %b %Y %H:%M"
        datetime_timezone "America/Los_Angeles"
      }
    }
  }
}

